{
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "language_overrides": {
    "Go": {
      "tab_size": 8
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=sandbox,integration"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "show_whitespaces": "boundary",
  "tabs": {
    "git_status": true
  },
  "telemetry": {
    "diagnostics": true
  },
  "terminal": {
    "blinking": "off",
    "font_family": "MonaspiceNe Nerd Font",
    "font_size": 14
  },
  "ui_font_family": "Monaspace Neon",
  "ui_font_size": 15,
  "vim_mode": true,
  "wrap_guides": [80]
}
