{
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "none"
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 100
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "languages": {
    "Go": {
      "tab_size": 8
    },
    "Python": {
      "format_on_save": {
        "language_server": {
          "name": "ruff"
        }
      },
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      },
      "language_servers": ["pyright", "ruff"]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "analyses": {
          "unusedvariable": true,
          "useany": true
        },
        "buildFlags": ["-tags=ceph,e2e,integration,sandbox,smoke"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "taplo": {
      "settings": {
        "array_auto_expand": false
      }
    }
  },
  "max_tabs": 8,
  "show_whitespaces": "boundary",
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "blinking": "off",
    "font_family": "MonaspiceNe Nerd Font",
    "font_size": 14
  },
  "toolbar": {
    "quick_actions": false
  },
  "theme": {
    "mode": "dark",
    "dark": "One Dark",
    "light": "One Light"
  },
  "ui_font_family": "Monaspace Neon",
  "ui_font_size": 15,
  "vim_mode": true,
  "wrap_guides": [80]
}
