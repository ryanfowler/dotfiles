{
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "language_overrides": {
    "Go": {
      "tab_size": 8
    }
  },
  "lsp": {
    // "gopls": {
    //   "initialization_options": {
    //     "buildFlags": ["-tags=sandbox,integration"]
    //   }
    // },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "show_whitespaces": "all",
  "telemetry": {
    "diagnostics": true
  },
  "terminal": {
    "font_family": "Source Code Pro",
    "font_size": 14
  },
  "ui_font_family": "Monaspace Neon",
  "ui_font_size": 15,
  "vim_mode": true,
  "wrap_guides": [80]
}
