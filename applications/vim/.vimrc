" vim
"
" Ryan Fowler


" Indent
filetype plugin indent on
set backspace=indent,eol,start

" Avoid line wrapping
set nowrap

" Syntax highlighting
syntax on

" Allow mouse
set mouse=a

" Display line numbers
set number

" Show cursor state
set ruler
set rulerformat=%l,%c

" Colours
highlight Normal ctermfg=grey ctermbg=black

